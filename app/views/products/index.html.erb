<% if flash[:notice].present? %>
 <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
<h1>Product List</h1>
  <table class="table">
     <tr>
       <th></th>
       <th>Name</th>
       <th>Price </th>
       <th></th>
     </tr>
     <% for product in @products %>
       <tr>
         <td><img src="<%= product.image_url %>" height="100" width="100"></td>
         <td><%= product.name %></td>
         <td><%= number_to_currency product.price %></td>
         <td><%= button_to "Add to Cart", add_to_cart_product_path(product), :method => :post, class: "btn btn-success" %></td>
       </tr>
 <% end %>
</table>
