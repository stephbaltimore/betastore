<div class="container-fluid">
  <div class="row">
    <div class="col-md-9">
      <h1>Betastore</h1>
      Our store is launching soon!
    </div>

    <div class="col-md-3">
            <%= form_for(@subscription) do |f| %>
              <div class="field">
                <%= f.label :email, "Find out when we go live:" %>
                <%= f.text_field :email %>
                <%= f.submit "Sign Up" %>
              </div>
            <% end %>

            <% if flash.present? %>
              <% flash.each do |k,v| %>
                <div class="<%= k %>"><%= v %></div>
              <% end %>
            <% end %>
    </div>
  </div>
</div>
